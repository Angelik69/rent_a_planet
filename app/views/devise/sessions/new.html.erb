<div class="container my-5">
  <div class="card border-0 rounded p-5 w-100">
    <h2 class="mb-5">Se connecter</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    label: 'E-mail',
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    label: "Mot de passe",
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, label: "Se rappeler de moi", as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Connexion", class: 'btn btn-booking mb-3' %>
      </div>
    <% end %>
    <div class="form-actions">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
