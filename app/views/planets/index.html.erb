          </div>
        </div>
        <div class="stars-btn">
          <div  class="stars">
            <ul>
              <li><ion-icon name="star-outline"></ion-icon></li>
              <li><ion-icon name="star-outline"></ion-icon></li>
              <li><ion-icon name="star-outline"></ion-icon></li>
              <li><ion-icon name="star-outline"></ion-icon></li>
              <li><ion-icon name="star-outline"></ion-icon></li>
            </ul>
          </div>
          <div class="card-btn">
          <p>Réserver</p>
          </div></div>
      </div>
    </div>
  <% end %>
</div>

