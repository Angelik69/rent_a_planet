  <%= simple_form_for(@planet) do |f| %>
    <%= f.input :name, label: 'Nom de votre planète' %>
    <%= f.input :description %>
    <%= f.input :price_per_night, label: 'Prix par nuit' %>
    <%= f.input :population, label: 'Population (en M)' %>
    <%= f.input :planet_type, label: 'Type' %>
    <%= f.input :photo, as: :file %>
    <%= f.button :submit, value: 'Créer une nouvelle planète', class: 'btn btn-booking mb-0 mt-3' %>
  <% end %>
